@model ConquerSite.Models.PlayerModels

@{
    ViewBag.Title = "Login";
}

<div class="login-container">
    <div class="login-form">
        <h2 class="login-title">Login</h2>

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Username, "Nome de Usuário", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Username, new { @class = "form-input", placeholder = "Seu nome de usuário" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, "Senha", new { @class = "form-label" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-input", placeholder = "Sua senha" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation-message" })

            </div>

            <div class="form-group">
                <button type="submit" class="btn-login">Entrar</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

