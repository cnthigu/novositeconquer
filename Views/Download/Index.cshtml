@{
    ViewData["Title"] = "Download";
}

<div class="download-container">
    <div class="download-content">
        <h1 class="download-title">🔥 Baixe o <span>CoGolden</span> Agora! 🔥</h1>
        <p class="download-subtitle">Escolha a versão e prepare-se para a batalha!</p>

        <div class="download-buttons">
            <a href="URL_DO_DOWNLOAD_COMPLETO" class="btn-download full">
                <i class="bi bi-download"></i> Cliente Completo
                <span class="btn-bg"></span>
            </a>
            <a href="URL_DA_ATUALIZAÇÃO" class="btn-download update">
                <i class="bi bi-arrow-repeat"></i> Apenas Atualização
                <span class="btn-bg"></span>
            </a>
        </div>

        <div class="system-requirements">
            <h2>Requisitos do Sistema</h2>
            <ul>
                <li><strong>SO:</strong> Windows 7/8/10</li>
                <li><strong>Processador:</strong> Intel Core i3 ou equivalente</li>
                <li><strong>Memória:</strong> 4 GB RAM</li>
                <li><strong>Gráficos:</strong> DirectX 11 compatível</li>
                <li><strong>Armazenamento:</strong> 5 GB de espaço disponível</li>
            </ul>
        </div>

        <div class="back-home">
            <a href="@Url.Action("Index", "Home")" class="btn-back">
                <i class="bi bi-house-door"></i> Voltar para Home
                <span class="btn-bg"></span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.btn-download, .btn-back');

            buttons.forEach(button => {
                button.addEventListener('mousemove', function(e) {
                    const rect = button.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;

                    button.style.setProperty('--mouse-x', `${x}px`);
                    button.style.setProperty('--mouse-y', `${y}px`);
                });
            });
        });
    </script>
}

