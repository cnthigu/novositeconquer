@model ConquerSite.Models.PlayerModels

@{
    ViewBag.Title = "Registrar";
}

<div class="register-container">
    <div class="register-form">
        <h2 class="register-title">Criar Conta</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "registration-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Nome de Usuário", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-input", placeholder = "Escolha um nome de usuário" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, "E-mail", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "Seu e-mail" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Senha", new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "Sua senha" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-message" })
            </div>

            <div class="button-group">
                <button type="submit" class="btn-register">
                    Criar Conta
                </button>
                <a href="@Url.Action("Index", "Home")" class="btn-back">
                    Voltar
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
