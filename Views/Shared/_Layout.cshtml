<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conquer</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="header-container">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">ConquerSite</a>
            <button class="navbar-toggler" type="button" onclick="toggleMenu()">
                <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="nav-links" id="navLinks">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Registro" asp-action="Register">Register</a>
                </li>

                @{
                    var user = Context.Session.GetString("User");
                }

                <li class="nav-item">
                    @if (string.IsNullOrEmpty(user))
                    {
                        <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Login">Store</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-area="" asp-controller="Pagamento" asp-action="Index">Store</a>
                    }
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Market" asp-action="Index">Market Live</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Mining" asp-action="Index">Mining</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Download" asp-action="Index">Download</a>
                </li>
            </ul>

            <ul class="nav-links">
                @if (!string.IsNullOrEmpty(user))
                {
                    <li class="nav-item">
                        <a class="login-button" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="login-button" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            &copy; 2025 - ConquerSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        function toggleMenu() {
            const navLinks = document.getElementById('navLinks');
            navLinks.classList.toggle('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

