@{
    ViewData["Title"] = "Home";
}

<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">Welcome to <span class="highlight">OrigensCO</span></h1>
        <p class="hero-description">    
            Experience the legendary MMORPG reborn. Join thousands of players in an epic adventure filled with PvP battles,
            guild wars, and endless possibilities.
        </p>
        <div class="cta-container">
            <a href="@Url.Action("Register", "Registro")" class="cta-button cta-primary">
                Play Now
            </a>
            <a href="@Url.Action("Index", "Download")" class="cta-button cta-secondary">
                Download
            </a>
        </div>
    </div>
</section>

<section class="features">
    <div class="container">
        <h2 class="section-title">Why Choose OrigensCO Classic?</h2>
        <div class="feature-grid">
            <div class="feature-card">
                <div class="feature-icon">⚔️</div>
                <h3>Epic Battles</h3>
                <p>Engage in thrilling PvP and PvE combat with players from around the world.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🏰</div>
                <h3>Guild Wars</h3>
                <p>Form alliances, conquer territories, and rise to power with your fellow warriors.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">💎</div>
                <h3>Rich Economy</h3>
                <p>Trade, craft, and build your wealth in a player-driven economy.</p>
            </div>
        </div>
    </div>
</section>


